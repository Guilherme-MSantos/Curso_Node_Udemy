<div id="book-page">
  <a href="/books">Voltar</a>
  <div class="container">
    <h1>{{book.title}}</h1>
    <p>Nº de páginas: {{book.pageqty}}</p>

    <div class="actions">
      <a href="/books/edit/{{book.id}}">Editar</a>
      <form method="post" action="/books/remove/{{book.id}}">
        <input type="submit" value="Remover" />
      </form>
    </div>
  </div>
</div>